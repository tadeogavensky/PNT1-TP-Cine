<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PNT1_TP_Cine</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PNT1_TP_Cine.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
</head>
<body style="font-family: 'Roboto', serif;">
    <header class="bg-black text-white border-bottom border-white py-3 fixed top-0">
        <div class="container d-flex justify-content-between align-items-center">

     
            <a class="text-center py-3 text-white text-decoration-none" href="/">
                <h1 class="h-4 m-0" style="font-family: 'Roboto', serif; text-transform: uppercase; letter-spacing: 3px; font-size: 2rem;">
                 Cine Ateneo
                </h1>
            </a>

            <nav class="d-flex gap-4 text-uppercase fw-bold">
                <a href="/Peliculas" class="text-white text-decoration-none border-bottom border-white pb-1">Películas</a>
                <a href="/Promociones" class="text-white text-decoration-none">Promociones</a>
                <a href="/Nosotros" class="text-white text-decoration-none">Nosotros</a>
                <a href="/Panel/Admin" class="text-white text-decoration-none">Acceso Admins</a>
            </nav>


            <a href="iniciar-sesion" class="btn btn-outline-light rounded-pill px-4 py-2 fw-bold text-uppercase shadow-sm" ">
                    Acceder
           </a>


        </div>
    </header>

    <main role="main" class="py-5 mx-auto bg-black ">
            @RenderBody()
        </main>

    <footer class="bg-black text-white border-top border-white py-4">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start gap-3">

            <div>
                <h5 class="mb-0 text-uppercase" style="letter-spacing: 2px;">Cine Ateneo</h5>
                <small class="text-secondary">&copy; 2025 - Todos los derechos reservados</small>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-3 text-uppercase fw-bold">
                <a href="/Peliculas" class="text-white text-decoration-none">Películas</a>
                <a href="/Promociones" class="text-white text-decoration-none">Promociones</a>
                <a href="/Nosotros" class="text-white text-decoration-none">Nosotros</a>
                <a href="/Home/Privacy" class="text-white text-decoration-none">Privacidad</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


  <style>
      body{
          margin:0;
          padding:0;
      }
      a{
          text-decoration:none;
      }

  </style>
