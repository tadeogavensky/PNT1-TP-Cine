<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cine Ateneo</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@700&display=swap" rel="stylesheet">
</head>
<body style="font-family: 'Roboto', serif;">
    <header class="bg-black text-white border-bottom border-white py-3 position-fixed z-3 vw-100 mb-5 top-0">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="text-center py-3 text-white text-decoration-none" href="/">
                <h1 class="h-4 m-0" style="font-family: 'Roboto', serif; text-transform: uppercase; letter-spacing: 3px; font-size: 2rem;">
                    Cine Ateneo
                </h1>
            </a>

            @{
                var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                 // Obtener el returnUrl de tres posibles fuentes:
                    var returnUrl = Context.Request.Query["returnUrl"].ToString();
            }

            <nav class="d-flex gap-4 text-uppercase fw-bold d-none d-md-flex fs-4">
                <a href="@Url.Action("Index", "Peliculas")"
                   class="fs-6 text-white text-decoration-none @(currentController == "Peliculas" ? "border-bottom border-white" : "")">
                    Películas
                </a>
                <a href="@Url.Action("Promociones", "Home")"
                   class="fs-6 text-white text-decoration-none @(currentController == "Home" && currentAction == "Promociones" ? "border-bottom border-white" : "")">
                    Promociones
                </a>
                <a href="@Url.Action("Nosotros", "Home")"
                   class="fs-6 text-white text-decoration-none @(currentController == "Home" && currentAction == "Nosotros" ? "border-bottom border-white" : "")">
                    Nosotros
                </a>
                
                   @if (User.IsInRole("Admin")) // Solo lo ve el admin
                    {
                        <a href="@Url.Action("Index", "Admin")"
                         class="fs-6 text-white text-decoration-none @(currentController == "Admin" && currentAction == "Index" ? "border-bottom border-white pb-1" : "")">
                         Acceso Admin
                        </a>
                    }
                
            </nav>

            @using Microsoft.AspNetCore.Http

            @if (User.Identity.IsAuthenticated)
            {
                <div class="d-flex gap-2 position-relative align-items-center align-content-end">
                    <span class="text-white me-2 fw-bold">
                        @{
                            var nombre = User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value;
                        }
                        <span class="text-white me-2 fw-bold">
                            Bienvenido/a, @nombre
                        </span>

                    </span>
                    <a class="btn btn-outline-light rounded-pill px-4 py-2 fw-bold text-uppercase shadow-sm"
                       asp-controller="Account"
                       asp-action="Logout"
                       asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">
                        Cerrar sesión
                    </a>
                </div>
            }
            else
            {
                <div class="d-flex flex-column flex-md-row gap-2 position-relative">
                    <a class="btn btn-outline-light rounded-pill px-4 py-2 fw-bold text-uppercase shadow-sm"
                       asp-controller="Account" asp-action="Login" asp-route-returnUrl="@($"{Context.Request.Path}{Context.Request.QueryString}")">Iniciar sesión</a>

                 <a class="btn btn-outline-light rounded-pill px-4 py-2 fw-bold text-uppercase shadow-sm"
                    asp-controller="Account" asp-action="Register">Registrarse</a>
                </div>
            }

        </div>
    </header>

    <main role="main" class="py-5 mx-auto bg-black">
        @RenderBody()
    </main>

    <footer class="bg-black text-white pt-3 pb-3 border-top border-white fixed-bottom">
        <div class="container">
            <div class="d-flex justify-content-between flex-wrap small">
                <div>
                    © 2025 Cine Ateneo
                </div>
                <div>
                    Dirección General de Defensa y Protección al Consumidor: Para consultas y/o denuncias haga
                    <a href="https://www.argentina.gob.ar/servicio/iniciar-un-reclamo-ante-defensa-del-consumidor"
                       class="text-white text-decoration-underline">click aquí</a>
                </div>
            </div>
        </div>
    </footer>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>


    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%; 
            background-color: black; 
        }

        a {
            text-decoration: none;
            color: lightgray;
            font-size: small;
        }

        .nav-link.active {
            background-color: #212529 !important;
            color: white !important;
        }

        .nav-link:hover {
            background-color: white !important;
            color: black !important;
        }

        button.nav-link {
            color: white;
        }


        label {
            color: #f8f9fa;
            font-weight: 600;
        }

    </style>
</body>
</html>
