@model PNT1_TP_Cine.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registrarse";
}

<div class="container-fluid d-flex flex-column px-0">
    <div class="row justify-content-center mx-0 pt-5">
        <div class="col-11 col-sm-8 col-md-6 col-lg-4 col-xl-3 p-0">
            <div class="bg-dark p-4 rounded shadow-sm mb-5">
            <h2 class="mb-4 text-white text-center">Registrate</h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning">
                    <strong>Errores del formulario:</strong>
                    <ul>
                        @foreach (var item in ViewData.ModelState)
                        {
                            foreach (var error in item.Value.Errors)
                            {
                                <li><strong>@item.Key</strong>: @error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" method="post" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="text-white"></label>
                    <input asp-for="Nombre" class="form-control" autocomplete="given-name" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Apellido" class="text-white"></label>
                    <input asp-for="Apellido" class="form-control" autocomplete="family-name" required />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="text-white"></label>
                    <input asp-for="Email" class="form-control" type="email" autocomplete="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Contrasena" class="text-white"></label>
                    <input asp-for="Contrasena" class="form-control" type="password" autocomplete="new-password" required />
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill">Registrarme</button>
            </form>
        </div>
    </div>
</div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
